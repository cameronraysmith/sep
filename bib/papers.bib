issn = {1091-6490},
journal = {Proc. Natl. Acad. Sci. U. S. A.},
keywords = {evolution},
mendeley-tags = {evolution},
month = oct,
pmid = {23090996},
title = {{Evolutionary analyses of non-genealogical bonds produced by introgressive descent.}},
year = {2012}
}
