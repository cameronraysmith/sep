issn = {0022-5193},
journal = {J. Theor. Biol.},
keywords = {Animals,Biological,Biological Evolution,Computational Biology,Genotype,Models,Phenotype,Protein Folding,RNA,biology,group reading candidate,information theory topology biology,topology},
mendeley-tags = {biology,group reading candidate,information theory topology biology,topology},
