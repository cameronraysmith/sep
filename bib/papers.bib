file = {:home/cameron/Mendeley/Christandl et al/2012/Christandl et al. - 2012 - Eigenvalue Distributions of Reduced Density Matrices.pdf:pdf},
keywords = {polyhedral combinatorics,polytopes,quantum entanglement,quantum mechanics,toric varieties},
mendeley-tags = {polyhedral combinatorics,polytopes,quantum entanglement,quantum mechanics,toric varieties},
month = apr,
pages = {43},
title = {{Eigenvalue Distributions of Reduced Density Matrices}},
year = {2012}
}
