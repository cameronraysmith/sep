file = {:home/cameron/Mendeley/Harmer et al/2010/Harmer et al. - 2010 - Intrinsic information carriers in combinatorial dynamical systems.pdf:pdf},
issn = {1089-7682},
journal = {Chaos},
keywords = {bir},
