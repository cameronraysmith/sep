issn = {1095-8541},
journal = {J. Theor. Biol.},
keywords = {Biological Evolution,Cooperative Behavior,Game Theory,Genetic,Genetic Drift,Humans,Language,Linguistics,Models,Mutation,Polymorphism,Selection,evolution,language,signaling games},
mendeley-tags = {evolution,language,signaling games},
month = oct,
