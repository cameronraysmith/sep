issn = {1464-7931},
journal = {Biol. Rev. Camb. Philos. Soc.},
keywords = {Animals,Cell Size,DNA,DNA: analysis,Evolution,Genetic,Genome,Humans,Models,Molecular},
month = feb,
number = {1},
pages = {65--101},
